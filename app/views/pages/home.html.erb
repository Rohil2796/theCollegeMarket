<% provide(:title, "Home") %>
<% if logged_in? %>
  <div class="row">
    <div class=".col-md-9 .col-md-push-3">
      <h3>Textbook Feed</h3>
      <%= render 'shared/feed' %>
    </div>
    <aside class=".col-md-3 .col-md-pull-9">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="tbpost_form">
        <%= link_to "Create new post!", 'posts/new', class: "btn btn-lg btn-primary" %>
      </section>
    </aside>
  
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to the College Market</h1>

  <h2>
    Welcome to the College Market!
  </h2>

  <%= link_to "Sign up now!", :signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>
