<% provide(:title, "Home") %>

<% if logged_in? %>
  <div class="row">

    <aside class="col-lg-3">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="tbpost_form">
        <%= link_to "Create new post!", 'posts/new', class: "btn btn-lg btn-primary" %>
      </section>
    </aside>
  <div class="col-lg-9">
      <h3>Textbook Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
   <%= render 'shared/default_home' %>
<% end %>
