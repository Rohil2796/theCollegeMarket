<% provide(:title, @user.firstName) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag @user.avatar.url(:medium) %>
        <%= @user.firstName + ' ' + @user.lastName  %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.post.any? %>
      <h3>Posts (<%= @user.post.count %>)</h3>
      <ol class="content">
        <%= render @post %>
      </ol>
      <%= will_paginate @post %>
    <% end %>
  </div>
</div>
