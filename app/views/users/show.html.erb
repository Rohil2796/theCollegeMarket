<% provide(:title, @user.firstName) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.firstName %>
        <%= @user.lastName %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.TbPost.any? %>
      <h3>Textbook Posts (<%= @user.TbPost.count %>)</h3>
      <ol class="TbPost">
        <%= render @tb %>
      </ol>
      <%= will_paginate @tb %>
    <% end %>
  </div>
</div>