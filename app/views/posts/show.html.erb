<p id="notice"><%= notice %></p>
<p>
  <strong>Title:</strong>
  <%= @post.name %>
 </p>
<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>
<p> 
  <strong>Offer or Request?</strong> 
   <%= @post.offerrequest %>
 </p>
 <p> 
  <strong>Item or Service?</strong> 
   <%= @post.itemservice %>
 </p>
 <p> 
  <strong>Price:</strong> 
  <%= '$'+@post.price+'.00' %>
 </p>
 <p> 
	 <strong>Category:</strong> 
	 <%= Category.find(@post.category_id).name %>
</p>


<% @attached_photos.each do |file| %>
  <li>
   <%= image_tag(file.asset.url(:thumb)) %>
   <%= link_to file.asset_file_name, file.asset.url, html_options = {download: 'Download Photo'} %>
  </li>
<% end %>
<%= link_to 'Send message', new_message_path(to: @post.user.id), class: 'btn btn-default btn-sm' %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>